<div id="galleries-index-intro">
    <div class="galleries-bg-image bg-parallax overlay"></div>
    <div id="gal-index-title">
      <h3><%=t('galleries.galleries')%></h3>
    </div>
  </div>
</div>

<div class="gallery-index-container">

<% @galleries.each do |gallery| %>
  <%image_count = gallery.gallery_images.count %>
  <div class="col gallery-block compact-gallery">
    <div class="gallery-container">

        <div class="heading">
            <h2><%=gallery.title%></h2>
            <div class="gallery-time-tag">
              <span><%= time_tag(gallery.created_at) %></span>
            </div>
        </div>
        <div class="row no-gutters">

            <% gallery.gallery_images.limit(5).each do |img| %>
            <div class="col-md-6 col-lg-4 item zoom-on-hover">
                <a class="lightbox" href="galleries/<%=gallery.id%>">
                    <img class="img-fluid image img-thumbnail" src="<%=img.image%>">
                    <span class="description">
                        <span class="description-heading">Lorem Ipsum</span>
                        <span class="description-body">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc quam urna.Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span>
                    </span>
                </a>
            </div>
            <% end %>    

        </div>
    </div>
  </div>
  <div class="row gal-controls-row">
    <div class="gal-pic-count">
      <span><%=image_count%>  <%=t('galleries.pictures')%></span>
    </div>
    <div class="gallery-more-link">
      <%= link_to gallery_path(gallery.id), class: 'gal-more'  do %>
        <%=t('galleries.more')%>...
      <% end %>
    </div>
  </div>

<% end %>
</div>
<div class="gal-index-spacer">
</div>
<footer class="navbar nav-footer navbar-expand">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item"><a class="nav-link social-btn" href="#"><i class="fab fa-facebook-square"></i><span class="sr-only">(current)</span></a></li>
    <li class="nav-item"><a class="nav-link social-btn" href="#"><i class="fab fa-twitter-square"></i><span class="sr-only">(current)</span></a></li>
    <li class="nav-item"><a class="nav-link social-btn" href="#"><i class="fab fa-instagram"></i><span class="sr-only">(current)</span></a></li>
  </ul>
</footer>

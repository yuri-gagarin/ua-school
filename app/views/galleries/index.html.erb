<div class="container-fluid gallery-index-container">
<p id="notice"><%= notice %></p>

<div class="container-fluid gallery-container">
  <div class="row">
    <% @galleries.each do |gallery| %>
      <div class="col-md-6 form-group gal-index-column">
        <div class="container-fluid gallery-box">
          <div class="row gal-title-row justify-content-center">
            <h3 class="gal-title-index"><%= gallery.title %><span class="gal-time-index">Created at: <%=time_ago_in_words(gallery.created_at) + " ago"%></span></h3>
          </div>
          <div class="row gallery-images">
            <% gallery.gallery_images.limit(6).each do |data| %>
              <div class="col-md-4 col-sm-12 co-xs-12 gal-item">
                <div class="box gallery-image">
                  <img src="<%= data.image %>" alt="gallery-image" >
                </div>
              </div>
            <% end %>
          </div>

          <div class="row gallery-control-row">
            <div class="gallery-controls">
              <table>
              <thead>
                <tr>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                  <tr>
                    <td><%= link_to 'Show...', gallery, class: "gallery-control-link" %></td>
                    <% if current_user && current_user.role == "admin" %>
                      <td><%= link_to 'Edit', edit_gallery_path(gallery), class: "gallery-control-link" %></td>
                      <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' }, class: "gallery-control-link" %></td>
                    <% end %>
                  </tr>
              </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>


<% if current_user && current_user.role == "admin" %> 
<div class="new-gallery-row-link">
  <div class="new-gallery-link">
    <%= link_to 'New Gallery', new_gallery_path %>
  </div>
</div>


<% end %>
</div>
<footer class="navbar nav-footer navbar-expand">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item"><a class="nav-link social-btn" href="#"><i class="fab fa-facebook-square"></i><span class="sr-only">(current)</span></a></li>
    <li class="nav-item"><a class="nav-link social-btn" href="#"><i class="fab fa-twitter-square"></i><span class="sr-only">(current)</span></a></li>
    <li class="nav-item"><a class="nav-link social-btn" href="#"><i class="fab fa-instagram"></i><span class="sr-only">(current)</span></a></li>
  </ul>
</footer>

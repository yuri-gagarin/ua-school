<p id="notice"><%= notice %></p>

<h1>Index Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @index_posts.each do |index_post| %>
      <tr>
        <td><%= link_to 'Show', index_post %></td>
        <td><%= link_to 'Edit', edit_index_post_path(index_post) %></td>
        <td><%= link_to 'Destroy', index_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Index Post', new_index_post_path %>

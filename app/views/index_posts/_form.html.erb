<%= form_for(index_post) do |f| %>
  <% if index_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(index_post.errors.count, "error") %> prohibited this index_post from being saved:</h2>

      <ul>
      <% index_post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(index_post.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Name of a new class" %>
  <% end %>
  <%= form_group_tag(index_post.errors[:description]) do %>
    <%= f.label :description %>
    <%= f.cktext_area :description, rows: 20, class: 'form-control', placeholder: "description of a new class" %>
  <% end %>
  <select name="index_post[type]" class="form-control">
      <option value="">Please select</option>
      <option value="1" selected="selected">Education</option>
      <option value="2">Teachers</option>
      <option value="3">Workshops</option>
      <option value="4">School</option>
      <option value="5">About</option>
 </select>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-success"%>
  </div>
<% end %>

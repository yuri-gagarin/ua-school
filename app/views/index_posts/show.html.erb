<div id="index-post-intro">
  <div class="index-post-bg-image bg-parallax overlay"></div>
    <div id="index-post-title">
      <h3><%=@index_post.title%></h3>
    </div>
</div>
<div class="container index-post-container">
    <% if @index_post_images.length > 0%>
    <% img_url = @index_post_images[0].image %>
    <h3 class="text-center"><%= t('index_page.schedule')%></h3>
    <div class="row">
        <div class="col-md-6 col-sm-12 co-xs-12 gal-item offset-md-3">
            <div class="box">
                <a href="#" data-toggle="modal" data-target="#index_image">
                    <img src="<%=img_url%>">
                </a>
                <div class="modal fade" id="index_image" tabindex="-1" role="dialog">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <div class="modal-body">
                                <img src="<%=img_url%>">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>             
    </div>
    <% end %>
    <div class="row">
        <div class="col">
        <%=raw(@index_post.description)%>
        </div>
    </div>

    <% if @index_post_images.length > 1%>
    <div class="row index-post-gal-row">
        <% @index_post_images.drop(1).each_with_index do |data, index| %>
            <% data_id = "pic" + (index+1).to_s %>
            <% data_target = "#" + data_id %>
            <div class="col-md-4 col-sm-6 co-xs-12 gal-item">
                <div class="box">
                    <a href="#" data-toggle="modal" data-target="<%=data_target%>">
                        <img src="<%= data.image %>">
                    </a>
                    <div class="modal fade" id="<%= data_id%>" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                <div class="modal-body">
                                    <img src="<%= data.image %>">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <% end %>
     <div class="gen-back-btn">
        <%= link_to :back,  class: 'gen-back'  do %>
            <%=t('galleries.back')%>...
        <% end %>
    </div>
</div>
<div class="container form-container">
    <div class="row index-post-form-row">
        <div class="col">
            <div class="blog-reply-form">
                <h3 class="text-center"><i class="fas fa-envelope"></i>   <%=t('index_page.contact')%></h3>
                <form>
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" placeholder="Enter your Message"></textarea>
                    </div>
                        <button type="submit" class="btn btn-primary"><%=t('index_page.write_us')%></button>
                </form>
            </div>
        </div>
    </div>
</div>
<footer class="navbar nav-footer navbar-expand">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item"><a class="nav-link social-btn" href="#"><i class="fab fa-facebook-square"></i><span class="sr-only">(current)</span></a></li>
    <li class="nav-item"><a class="nav-link social-btn" href="#"><i class="fab fa-twitter-square"></i><span class="sr-only">(current)</span></a></li>
    <li class="nav-item"><a class="nav-link social-btn" href="#"><i class="fab fa-instagram"></i><span class="sr-only">(current)</span></a></li>
  </ul>
</footer>
<h1>New Sponsored Post</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for a Sponsored Post</p>
    <ul>
      <li>Enter a "Title"</li>
      <li>Describe your product</li>
      <li>Enter a price</li>
    </ul>
    <p>Notice: All Sponsored Posts are subject to our Terms of Service!</p>
  </div>
  <div class="col-md-8">
    <%= form_for [@topic, @sponsored_post] do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter post title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: "form-control", placeholder: "Enter some post info here" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: "form-control", placeholder: 0 %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>


<h1 class="course-title">Courses</h1>
<div class="container-fluid course-container">
  <% @courses.each do |course| %>
    <div class="container-fluid">
      <div class="row course-row">

        <div class="col-sm-9 course">
          <div class="course-div">
            <h1><%= course.name %></h1>
            <p><%= raw(course.description) %>

            <div class="course-details">
              <%= link_to 'Details', course_path(course.id), {class: 'course-details-link'} %>
            </div>
          </div>
          
        </div>

        <div class="col-sm-3">
          <table class="course-controls">
            <thead>
              <tr>
                <th colspan="3">Course Controls</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= link_to 'Show', course %></td>
                <td><%= link_to 'Edit', edit_course_path(course) %></td>
                <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  <% end %>


  <%= link_to 'New Course', new_course_path %>
</div>

